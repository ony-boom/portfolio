---
import "../styles/global.css";
import Layout from "../layouts/Layout.astro";
import Experience from "../components/Experience.astro";
import ExperienceSection from "../components/ExperienceSection.astro";
import CurrentTime from "../components/CurrentTime.astro";
---

<Layout>
  <div class="space-y-8">
    <div>
      <hgroup class="space-y-1">
        <h1 class="text-3xl font-semibold">
          <span class="underline">Ony</span>
          <span class="uppercase">Rakotonirina</span>
        </h1>
        <p class="text-lg">Web developer</p>
      </hgroup>

      <div class="mt-2 text-neutral-600">
        <div class="flex flex-wrap space-x-2">
          <p>he/him</p>
          <p>&bull;</p>
          <p>22 years old</p>
          <p class="print:hidden">&bull;</p>
          <CurrentTime title="Timezone">
            <span>Indian/Antananarivo:</span>
          </CurrentTime>
        </div>
      </div>
    </div>

    <section>
      <h2 class="text-xl font-semibold">About me</h2>
      <p class="mt-2">
        I'm a web developer based in Antananarivo, Madagascar. I have experience
        in developing large web applications using modern technologies. I am
        passionate about web technologies and continuously strive to learn new
        things to improve my skills.
      </p>
    </section>

    <ExperienceSection title="Experiences">
      <Experience
        when={[new Date("2023-04-14")]}
        where={{
          name: "BOCASAY",
          url: "https://www.bocasay.com/madagascar-agile-it-service-centre/",
        }}
        title="Web developer"
      >
        <p slot="description">
          Developed a large-scale web application for SDS and cosmetic
          regulation using <span class="font-semibold">React</span>, <span
            class="font-semibold">ExtJS</span
          >,
          <span class="font-semibold">GraphQL</span>, and <span
            class="font-semibold">SQL</span
          >. Redesigned the responsive, user-friendly interface and collaborated
          with the team to deliver high-performance web solutions.
        </p>
      </Experience>

      <Experience
        when={[new Date("2022-09-01"), new Date("2023-04-01")]}
        where={{
          name: "BOCASAY",
          url: "https://www.bocasay.com/madagascar-agile-it-service-centre/",
        }}
        title="Internship"
      >
        <p slot="description">
          Built a <span class="font-semibold"> VS Code plugin </span> that simplifies
          i18n management across projects, implementing it in <span
            class="font-semibold"
          >
            TypeScript
          </span>
        </p>
      </Experience>

      <Experience
        title="Frontend developer"
        where={{
          name: "Freelance",
        }}
        when={[new Date("2021-10-01"), new Date("2022-10-01")]}
      >
        <p slot="description">
          Designed and developed high-performance, responsive web applications
          leveraging <span class="font-semibold">HTML5</span>, <span
            class="font-semibold">CSS3</span
          >, <span class="font-semibold">nodejs</span>, and <span
            class="font-semibold">React</span
          >
          technologies. Proactively managed project timelines and maintained effective
          client communication, consistently ensuring timely project delivery.
        </p>
      </Experience>
    </ExperienceSection>
    <ExperienceSection title="Studies">
      <Experience
        title="Certificate in web development"
        where={{
          name: "SAYNA",
          url: "https://sayna.io/",
        }}
        when={[new Date("2019-10-01"), new Date("2021-07-01")]}
      >
        <p slot="description">
          Developed a comprehensive foundation in computer science fundamentals,
          mastering advanced algorithms, complex data structures, and
          multi-language programming techniques critical for modern software
          development.
        </p>
        <p slot="extra" class="mt-1">
          <a
            target="_blank"
            href="https://drive.google.com/file/d/1OdNuCwUzestFYlSSe5S_uqk_k7u0uRe-/view?usp=sharing"
          >
            <span class="text-neutral-600">Certificate</span>
          </a>
        </p>
      </Experience>
    </ExperienceSection>

    <section>
      <h2 class="text-xl font-semibold">Links</h2>

      <ul class="mt-3 list-disc space-y-4 pl-2">
        <li>
          <a href="https://github.com/ony-boom" target="_blank"> Github </a>
        </li>
        <li>
          <a target="_blank" href="https://linkedin.com/in/ony-boom">
            LinkedIn
          </a>
        </li>
      </ul>
    </section>
  </div>
</Layout>
