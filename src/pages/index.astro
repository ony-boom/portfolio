---
import "../styles/global.css";
import Layout from "../layouts/Layout.astro";
import Experience from "../components/Experience.astro";
import ExperienceSection from "../components/ExperienceSection.astro";
import CurrentTime from "../components/CurrentTime.astro";
---

<Layout>
  <div class="space-y-8">
    <div>
      <hgroup class="space-y-1">
        <h1 class="text-3xl font-semibold">
          Ony <span class="uppercase">Rakotonirina</span>
        </h1>
        <p class="text-lg">Web developer</p>
      </hgroup>

      <div class="mt-2 text-neutral-600">
        <div class="flex space-x-2">
          <p>he/him</p>
          <p>&bull;</p>
          <p>22 years'old</p>
          <p class="print:hidden">&bull;</p>
          <CurrentTime />
        </div>
      </div>
    </div>

    <section>
      <h2 class="text-xl font-semibold">About me</h2>
      <p class="mt-2">
        I'm a web developer based in Antananarivo, Madagascar. I'm passionate
        about web technologies and I love to learn new things.
      </p>
    </section>

    <ExperienceSection title="Experiences">
      <Experience
        when={[new Date("2023-03-14")]}
        where={{
          name: "BOCASAY",
          url: "https://www.bocasay.com/madagascar-agile-it-service-centre/",
        }}
        title="Web developer"
      >
        <p slot="description">
          Developed large web application using React, ExtJS, GraphQL, and SQL.
          Improved user interface and user experience through strategic design
          overhaul. Collaborated with team to implement modern, responsive web
          application interfaces.
        </p>
      </Experience>

      <Experience
        title="Frontend developer"
        where={{
          name: "Freelance",
        }}
        when={[new Date("2021-10-01"), new Date("2022-10-01")]}
      >
        <p slot="description">
          Developed responsive web applications using HTML5, CSS3, JavaScript,
          and React. Managed project timelines and client communications while
          meeting project deadlines.
        </p>
      </Experience>
    </ExperienceSection>
    <ExperienceSection title="Studies">
      <Experience
        title="Certificate in web development"
        where={{
          name: "SAYNA",
          url: "https://sayna.io/",
        }}
        when={[new Date("2019-10-01"), new Date("2021-07-01")]}
      >
        <p slot="description">
          I've learned the basics of computer science, such as algorithms, data
          structures, and programming languages.
        </p>
        <p slot="extra" class="mt-1">
          <a
            href="https://drive.google
            .com/file/d/1OdNuCwUzestFYlSSe5S_uqk_k7u0uRe-/view?usp=sharing"
          >
            <span class="text-neutral-600">Certificate</span>
          </a>
        </p>
      </Experience>
    </ExperienceSection>

    <section>
      <h2 class="text-xl font-semibold">Links</h2>

      <ul class="mt-3 list-disc space-y-4 pl-2">
        <li>
          <a href="https://ony.world"> My personal website </a>
        </li>
        <li>
          <a href="https://github.com/ony-boom" target="_blank"> Github </a>
        </li>
        <li>
          <a target="_blank" href="https://linkedin.com/in/ony-boom">
            LinkedIn
          </a>
        </li>
      </ul>
    </section>
  </div>
</Layout>
